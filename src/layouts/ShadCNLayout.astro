---
import "../styles/main.scss";

import {buttonVariants} from "@/components/ui/button";
import ThemeToggle from "@/components/header/ThemeToggle.astro";

import LenisHead from "@/components/header/lenis.astro";
import GTMHead from "@/components/header/GTMHead.astro";
import GTMBody from "@/components/header/GTMBody.astro";

const {title, prefetchInHead = []} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<link rel="icon" href="/favicon.svg" />
		<GTMHead />
		<LenisHead />

		{prefetchInHead.map((url) => <link rel="prefetch" href={url} />)}
	</head>
	<body class="min-h-screen bg-background font-sans antialiased">
		<GTMBody />
		<div class="relative flex min-h-screen flex-col">
			<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
				<div class="container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0">
					<div class="flex gap-6 md:gap-10">
						<a href="/" class="flex items-center space-x-2">
							<span class="inline-block font-bold">Home</span>
						</a>
					</div>
					<div class="flex flex-1 items-center justify-end space-x-4">
						<nav class="flex items-center space-x-1">
							<a href="https://github.com/gabrielbacha/astro-react-shadcn-starter.git" target="_blank" rel="noreferrer" class={buttonVariants({variant: "ghost"})}> GitHub </a>
							<ThemeToggle />
						</nav>
					</div>
				</div>
			</header>

			<main class="flex-auto">
				<slot />
			</main>
			<footer class="border-t py-6 md:px-8 md:py-0">
				<div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
					<p class="text-center text-sm leading-loose text-muted-foreground md:text-left">
						The source code is available on{" "}
						<a href="https://github.com/gabrielbacha/astro-react-shadcn-starter.git" target="_blank" rel="noreferrer" class="font-medium underline underline-offset-4">GitHub</a>
						.
					</p>
				</div>
			</footer>
		</div>
	</body></html
>
